{
    "workbench.colorTheme": "Isotope (rainglow)",
    "workbench.iconTheme": "vscode-icons",
    "editor.fontFamily": "Myrica M for Powerline",
    "editor.minimap.enabled": false,
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "all",
    "editor.mouseWheelZoom": true,
    "breadcrumbs.enabled": true,
    "terminal.integrated.shell.windows": "C:\\msys64\\usr\\bin\\bash.exe",
    "terminal.integrated.shellArgs.windows": [
        "--login"
    ],
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.env.windows": {
        "MSYSTEM": "MINGW64",
        "CHERE_INVOKING": "1"
    },
    "terminal.integrated.fontFamily": "Myrica M for Powerline",
    "workbench.colorCustomizations": {
        "statusBar.background": "#005f5f",
        "statusBar.noFolderBackground": "#005f5f",
        "statusBar.debuggingBackground": "#005f5f"
    },
    "files.associations": {
        // .clang-formatファイルをjsonに関連付ける
        ".clang-format": "json",
        // 拡張子の無いC++標準ライブラリのヘッダーをcppに関連付けする場合は以下のようにする
        // C/C++拡張機能が勝手にワークスペース設定に反映してくれるので設定をする必要はない
        "iostream": "cpp",
        "cstdlib": "cpp",
    },
    "clang.executable": "C:\\msys64\\usr\\bin\\clang++.exe",
    "C_Cpp.default.intelliSenseMode": "clang-x64",
    "C_Cpp.default.compilerPath": "C:\\msys64\\usr\\bin\\c++.exe",
    "C_Cpp.default.includePath": [
        "C:\\msys64\\usr\\include",
        "C:\\msys64\\usr\\lib\\clang\\3.8.0\\include",
        "C:\\msys64\\usr\\lib\\gcc\\x86_64-pc-msys\\7.3.0\\include",
        "C:\\msys64\\usr\\lib\\gcc\\x86_64-pc-msys\\7.3.0\\include\\c++",
        "C:\\msys64\\usr\\lib\\gcc\\x86_64-pc-msys\\7.3.0\\include\\cilk",
        "C:\\msys64\\usr\\lib\\gcc\\x86_64-pc-msys\\7.3.0\\include\\c++\\tr1"
    ],
    "git.autofetch": true,
    "python.pythonPath": "$HOME\\AppData\\Local\\Continuum\\anaconda3\\python.exe",
    "terminal.integrated.cursorBlinking": true,
    "python.condaPath": "$HOME\\AppData\\Local\\Continuum\\anaconda3",
    "sync.gist": "4b77e3ce5fb1db0f8748e410ac791854",
    "vim.foldfix": true,
    "window.menuBarVisibility": "default",
    "vim.easymotion": true,
    "vim.easymotionMarkerFontWeight": "bold",
    "vim.highlightedyank.enable": true,
    "vim.hlsearch": true,
    "vim.camelCaseMotion.enable": true,
    "vim.leader": "<space>",
    "vim.useSystemClipboard": true,
    "vim.whichwrap": "h,l,<,>,[,]",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<C-e>"],
            "after": [],
            "commands": [
                { "command": "workbench.action.toggleSidebarVisibility" }
            ]
        },
        {
          "before": ["<leader>", "d"],
          "after": ["d", "d"]
        },
        {
            "before": ["<leader>", "p"],
            "after": [],
            "commands": [
                { "command": "workbench.action.quickOpen" }
            ]
        }
    ],
    "vim.insertModeKeyBindings": [
        {
         "before": ["<C-h>"],
         "after": ["<LEFT>"]
        },
        {
         "before": ["<C-j>"],
         "after": ["<DOWN>"]
        },
        {
         "before": ["<C-k>"],
         "after": ["<UP>"]
        },
        {
         "before": ["<C-l>"],
         "after": ["<RIGHT>"]
        },
        {
         "before": ["j", "j"],
         "after": ["<Esc>"]
        }
    ],
    "terminal.integrated.fontSize": 16,
    "debug.console.fontSize": 16,
    "C_Cpp.updateChannel": "Insiders",
    "editor.minimap.side": "left",
    "git.confirmSync": false,
    "gitlens.sortBranchesBy": "date:desc",
    "gitlens.sortTagsBy": "date:desc",
    "gitlens.defaultDateSource": "committed",
    "gitlens.defaultDateStyle": "absolute",
    "search.exclude": {
        "{**/code.fo,**/code.allsym, **/tags, **/*.txt}": true,
        "doc/": true,
        "test/": true
    },
    "C_Cpp.exclusionPolicy": "checkFilesAndFolders",
    "python.formatting.autopep8Args": [
        "--indent-size=2",
        "--ignore=E402"
    ]
    "[python]": {
        "editor.tabSize": 2,                      // indent level to 2
        "editor.formatOnSave": true,              // at saving, format
        "editor.formatOnPaste": false,            // don't format on paste
        "editor.formatOnType": false,             // don't format on typing
    },
    "editor.fontSize": 15,
    "window.zoomLevel": 0.1,
    "cmake.configureOnOpen": false,
    "window.openFilesInNewWindow": "on",
    "editor.tabCompletion": "on",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.enablePreview": false,
    "vsicons.dontShowNewVersionMessage": true
}